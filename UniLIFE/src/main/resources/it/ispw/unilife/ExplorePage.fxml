<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="600.0" minWidth="900.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.ispw.unilife.view.ExplorePageView">

    <top>
        <VBox spacing="15.0" style="-fx-background-color: #1a1a1a; -fx-padding: 20;">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <children>
                        <Label text="Esplora Corsi" textFill="#ff914d">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>

                        <HBox HBox.hgrow="ALWAYS" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-background-radius: 20;">
                            <children>
                                <TextField fx:id="searchBar" promptText="Cerca per nome, tag, interessi..." style="-fx-background-color: transparent;" HBox.hgrow="ALWAYS">
                                    <font><Font size="14.0" /></font>
                                </TextField>
                                <Button mnemonicParsing="false" onAction="#onSearchClick" style="-fx-background-color: #ff914d; -fx-text-fill: white; -fx-background-radius: 0 20 20 0;" text="Cerca">
                                    <font><Font name="System Bold" size="13.0" /></font>
                                    <padding><Insets bottom="8.0" left="15.0" right="15.0" top="8.0" /></padding>
                                    <cursor><javafx.scene.Cursor fx:constant="HAND" /></cursor>
                                </Button>
                            </children>
                            <padding><Insets left="15.0" /></padding>
                        </HBox>

                        <Button onAction="#onHomeClick" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 5;" text="Torna alla Home" />
                    </children>
                </HBox>

                <HBox spacing="15.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Filtra per:" textFill="WHITE" />
                        <ComboBox fx:id="universityCombo" promptText="Università" prefWidth="150.0" style="-fx-background-color: white;" />
                        <ComboBox fx:id="courseTypeCombo" promptText="Tipo Laurea" prefWidth="150.0" style="-fx-background-color: white;" />
                        <ComboBox fx:id="facultyCombo" promptText="Facoltà" prefWidth="150.0" style="-fx-background-color: white;" />

                        <Button onAction="#onApplyFiltersClick" style="-fx-background-color: #1f618d; -fx-text-fill: white;" text="Applica Filtri">
                            <cursor><javafx.scene.Cursor fx:constant="HAND" /></cursor>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: #f4f4f4; -fx-border-color: transparent;">
            <content>
                <VBox fx:id="resultsContainer" spacing="15.0">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>