<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.ispw.unilife.view.StudentReservationView">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #1f1f1f; -fx-padding: 10 20 10 20;">
            <children>
                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" />

                <TextField promptText="Cerca Tutor..." style="-fx-background-radius: 20; -fx-padding: 5 10 5 10; -fx-pref-width: 250; -fx-background-color: white;" />

                <Label style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 3 8 3 8; -fx-font-weight: bold;" text="Studente" />

                <Region HBox.hgrow="ALWAYS" />

                <Button style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 15; -fx-min-width: 30; -fx-min-height: 30; -fx-font-size: 12;" text="M" />
                <Button style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 18;" text="ðŸ›’" />
            </children>
        </HBox>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" style="-fx-padding: 30;">
            <children>
                <VBox maxWidth="800.0" spacing="20.0" VBox.vgrow="ALWAYS">
                    <children>

                        <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Completa le tue Prenotazioni" />
                        <Label style="-fx-font-size: 14px; -fx-text-fill: #666;" text="Queste lezioni sono state accettate dai tutor. Effettua il pagamento per confermarle." />

                        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-border-color: #e0e0e0; -fx-border-radius: 8;" VBox.vgrow="ALWAYS">
                            <content>
                                <VBox fx:id="paymentContainer" spacing="10.0" style="-fx-padding: 15; -fx-background-color: white;" />
                            </content>
                        </ScrollPane>

                    </children>
                </VBox>
            </children>
        </VBox>
    </center>

    <bottom>
        <HBox style="-fx-padding: 10 20 10 20; -fx-background-color: #f4f4f4; -fx-border-color: #e0e0e0; -fx-border-width: 1 0 0 0;">
            <children>
                <Label fx:id="lblMessage" style="-fx-text-fill: #666666;" text="Verifica pagamenti..." />
            </children>
        </HBox>
    </bottom>

</BorderPane>